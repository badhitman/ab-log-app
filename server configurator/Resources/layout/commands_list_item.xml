<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[h]"
                android:id="@+id/command_info2_list_item"
                android:gravity="center_vertical"
                android:textColor="#ffd50000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[p]"
                android:id="@+id/command_info3_list_item"
                android:gravity="center_vertical"
                android:textColor="#ff2962ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="[r]"
                android:id="@+id/command_info4_list_item"
                android:gravity="center_vertical"
                android:textColor="#ff00c853" />

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="info"
                android:id="@+id/command_info_list_item"
                android:gravity="center_vertical"
                android:textColor="#ff8d6e63"
                android:textStyle="bold" />

            <ImageButton
                android:contentDescription="arrow _upward"
                android:src="@drawable/ic_arrow_upward"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/UpCommandOrdering" />

            <ImageButton
                android:contentDescription="ic_arrow_downward"
                android:src="@drawable/ic_arrow_downward"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/DownCommandOrdering" />


        </LinearLayout>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="name"
            android:id="@+id/command_name_list_item" />

    </LinearLayout>

</androidx.cardview.widget.CardView>