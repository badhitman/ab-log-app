
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:foregroundGravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333"
                android:text="Name user"
                android:id="@+id/user_list_item"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:gravity="left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/alarm_short_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/user_list_item_alarm_subscribed"
                    android:textColor="#ff058a00"
                    android:gravity="bottom" />

                <TextView
                    android:text="@string/command_short_label"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/user_list_item_command_allowed"
                    android:textColor="#ffc12525"
                    android:gravity="bottom" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_gravity="right">

            <TextView
                android:text="@string/email_hint"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_list_item_email"
                android:layout_marginLeft="10dp"
                android:autoLink="email"
                android:gravity="right" />

            <TextView
                android:text="@string/phone_hint"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_list_item_phone"
                android:layout_marginLeft="10dp"
                android:autoLink="phone"
                android:gravity="right" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>