<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:id="@+id/ports_config_set_card_view"
    app:contentPadding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/ports_config_app_bar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/port_setting_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ports_config_card_header"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:typeface="serif"
                android:layout_marginBottom="5dp" />

            <AbsoluteLayout
                android:background="#ff78909c"
                android:minHeight="3px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TabWidget>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linear_layout_ports_config_xp1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="P0-P13 (&amp; P14)"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_layout_ports_config_xp2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="P15-P28 (&amp; P29)"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_layout_ports_config_xt2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="P30-P35"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_layout_ports_config_xp56"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:text="P36-P37"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:gravity="center" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </TabHost>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>